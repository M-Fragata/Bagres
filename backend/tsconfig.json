{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Diz ao TS para olhar apenas a pasta src
  "exclude": ["node_modules", "dist"] // Ignora o que não é código fonte
}